<Window x:Class="ApkaSkiny.View.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SelectionWindow" Height="300" Width="400">
	<Grid>
		<!-- Display the prompt text -->
		<TextBlock Text="{Binding Prompt}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" />

		<!-- ListBox for options -->
		<ListBox x:Name="OptionsListBox" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10" SelectionChanged="OptionsListBox_SelectionChanged"/>

		<!-- Button to confirm selection -->
		<Button Content="Select" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="SelectButton_Click"/>
	</Grid>
</Window>
